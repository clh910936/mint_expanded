{
    "rules": {
        "semi": ["error", "always"],
            "quotes": ["error", "double"],
            "curly": "error",
            "prefer-const": "error",
            "object-curly-newline": [
                "error",
                {
                    "ObjectExpression": "always",
                    "ObjectPattern": {
                        "multiline": true
                    },
                    "ImportDeclaration": "never",
                    "ExportDeclaration": {
                        "multiline": true,
                        "minProperties": 3
                    }
                }
            ],
            "indent": [
                "error",
                "4"
            ]
    },
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "env": {
        "es6": true
    }
}